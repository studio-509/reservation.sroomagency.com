    <?php
    $i = 0;
    foreach($reservations as $val){
	
      if($val->jour < date('Y-m-d') || ($val->jour == date('Y-m-d') && $val->horaire < date('H')))
      {
        $class = 'passe';
        $etat = 'cloturé';
      }
      elseif($val->regle == 0 && $val->valide == 0)
      {
        $class = 'encours';
        $etat = 'en cours de réservation';
      }
      elseif($val->regle == 0 && $val->valide == 1)
      {
        $class = 'resa_alerte';
        $etat = 'Règlement avant le jeu';
      }
      else
      {
        $class = 'libre';
        $etat = 'Réservation validée';
      }
      ?>
      <tr class="<?=$class?>" id="_tr<?=$val->id?>">
        <td class="col01 first"><?=$val->id?></td>
        <td class="col01"><?=dateFr($val->jour)?> <?=$val->horaire?></td>
        <td class="col02"><?=$val->scenario?></td>
        <td class="col02"><?=$val->civil . ' ' . $val->prenom . ' ' . $val->nom?></td>
        <td class="col02"><?=$val->email?></td>
        <td class="col03"><?=$val->tel?></td>
        <td class="col03" align="center"><?=$val->joueurs?></td>
        <td class="col03"><?=number_format($val->prix,2)?> €</td>
        <td class="col03"><?=$etat?></td>
        <td class="col07 last">
		<div class="hidden" id="hidden<?=$val->id?>" data-id="<?=$val->id_salle?>"></div>
          <ul class="list-action">
            <li><a class="btn_actions btn_supp _reservation_delete" data-id="<?=$val->id?>" data-idsalle="<?=$val->id_salle?>" data-scenario="<?=$val->scenario?>" resindis="resa" data-client="<?=$val->civil . ' ' . $val->prenom . ' ' . $val->nom?>" data-date="<?=dateFr($val->jour)?> à <?=$val->horaire?>"><img src="<?php echo APP_URL; ?>/assets/img/picto-action-supprimer.png" /></a></li>
            <li><a class="btn_actions btn_supp _reservation_update" data-id="<?=$val->id?>"><img src="<?php echo APP_URL; ?>/assets/img/picto-action-modifier.png" /></a></li>
          <?php if($val->regle == 0): ?>
              <li><a class="btn_actions btn_supp _reservation_paid" data-id="<?=$val->id?>"><img src="<?php echo APP_URL; ?>/assets/img/picto-action-reglement-sur-place.png" /></a></li>
              <li><a class="btn_actions btn_supp _order_admin_process" data-id="<?=$val->id?>"><img src="<?php echo APP_URL; ?>/assets/img/picto-action-paiement-cb.png" /></a></li>
          <?php endif; ?>
		  </ul>
        </td>
      </tr>
